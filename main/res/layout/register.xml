<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Register"
    android:id="@+id/signup_form"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/bg_register"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <EditText
            android:id="@+id/username_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/hint_username"
            android:drawableLeft="@drawable/ic_username_white"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@color/input_register"
            style="@style/editext_graybg_register"
            android:textColorHint="@color/input_register_hint" />

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="@string/hint_password"
            android:padding="10dp"
            android:maxLines="1"
            android:inputType="textPassword"
            style="@style/editext_graybg_register"
            android:drawableLeft="@drawable/ic_pwd_white"
            android:singleLine="true"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <EditText
            android:id="@+id/password_again_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/hint_password_again"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:padding="10dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_pwd_white"
            style="@style/editext_graybg_register"
            android:singleLine="true"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:text="@string/btn_register"
            android:textColor="@color/white"
            style="@style/btn_pink_large" />

        <Button
            android:id="@+id/login_link_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@null"
            android:text="@string/btn_link_to_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>